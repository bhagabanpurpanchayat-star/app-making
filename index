<body>

<div class="card">
  <h2 style="margin-top:0;">Data Entry</h2>

  <label>Name</label>
  <input id="name" type="text" required>

  <label>Gurdian</label>
  <input id="guardian" type="text">

  <label>Address</label>
  <textarea id="address"></textarea>

  <label>Mobile No</label>
  <input id="mobile" type="text" inputmode="numeric">

  <button onclick="saveData()">SAVE</button>

  <div class="message" id="msg"></div>
</div>


<script>
  // Your Google WebApp URL
  const WEBAPP_URL = "https://script.google.com/macros/s/AKfycbypBfYkOiC6Qtc8Cm4-f30QHSdsTszsKU3_Yh5SRdhOM3rxnDBrDdj3bmO3m_yY3pM/exec";

  function saveData() {
    const data = {
      name: document.getElementById("name").value,
      guardian: document.getElementById("guardian").value,
      address: document.getElementById("address").value,
      mobile: document.getElementById("mobile").value
    };

    fetch(WEBAPP_URL, {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify(data)
    })
    .then(res => res.text())
    .then(msg => {
      const m = document.getElementById("msg");
      m.innerHTML = msg;
      m.style.display = "block";

      document.getElementById("name").value = "";
      document.getElementById("guardian").value = "";
      document.getElementById("address").value = "";
      document.getElementById("mobile").value = "";
    })
    .catch(err => {
      alert("Error: " + err);
    });
  }
</script>

</body>
